<AuthorizeView>
    <Authorized>
        
            @if (EnvironmentInfo.IsDebug())
            {
                <MudNavLink Href="/account">
                    <MudText Style="background-color: #323390; color: white; text-align: center">@context.User.Identity.Name</MudText>
                </MudNavLink>
            }
            else
            {
                <MudText Style="background-color: #323390; color: white; text-align: center">@context.User.Identity.Name</MudText>
            }
        
    </Authorized>
</AuthorizeView>

<MudNavMenu>    
    <MudNavLink Href="/services">Services</MudNavLink>
    <MudNavLink Href="/portfolio">Portfolio</MudNavLink>
    @if (EnvironmentInfo.IsDebug())
    {
        <MudNavLink Href="/skillsmatrix">Skills Matrix</MudNavLink>
    }
    <MudDivider DividerType="DividerType.FullWidth" />
    <MudNavLink Href="/contact">Contact</MudNavLink>
    <MudDivider DividerType="DividerType.FullWidth" />
    <MudNavGroup Title="Playground" Expanded="true">
        <MudNavLink Href="/playground/EthereumExplorer">Ethereum Explorer</MudNavLink>        
        <MudNavLink Href="/playground/dcacalculator">DCA Calculator</MudNavLink>        
    </MudNavGroup>
    <MudDivider DividerType="DividerType.FullWidth" />
    @if (EnvironmentInfo.IsDebug())
    {
        <AuthorizeView Roles="System Administrator">
            <Authorized>
                <MudNavGroup Title="Sys Admin" Expanded="@(EnvironmentInfo.IsDebug())">
                    <MudNavLink Href="/sysadmin/users">Users</MudNavLink>
                </MudNavGroup>
            </Authorized>
        </AuthorizeView>
    }   
</MudNavMenu>
